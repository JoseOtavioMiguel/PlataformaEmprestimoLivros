@model IEnumerable<EmprestimoModel>


<div class="container">
    <!-- Cria uma div contendo o botão de Cadastrar Novo Empréstimo -->

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>
        <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastrar">Cadastrar novo empréstimo</a>
    </div>

    <table class="table table-dark table-hover">
        <!-- Imprime o Cabeçalho da Tabela -->
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro</th>
                <th scope="col">Última atualização</th>
            </tr>
        </thead>
        <tbody> 

            <!-- Verifica se há algum dado inserido na tabela Emprestimo-->
            @if(Model != null)
            {
                // Percorre os dados inseridos na tabela, imprimindo-os na Tela
                @foreach(var emprestimo in Model)
                {
                    <tr>
                        <th scope="row">@emprestimo.Recebedor</th>
                        <td>@emprestimo.Fornecedor</td>
                        <td>@emprestimo.LivroEmprestado</td>
                        <td>@emprestimo.DataEmprestimo</td>
                    </tr>
                }
            }

        </tbody>
    </table>

</div>