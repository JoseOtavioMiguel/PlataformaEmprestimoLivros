@model EmprestimoModel

@{
    ViewData["title"] = "Cadastrar Empréstimo";
}

<!-- div contendo o formulário de Cadastro de Empréstimo -->
<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Empréstimo</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Cadastrar">
        <!-- Dados do Recebedor -->
        <div class="mb-3">
             <label for="Recebedor" class="form-label text-light">Recebedor:</label>
             <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem receberá o Livro?">
        </div>

        <!-- Dados do Fornecedor -->
        <div class="mb-3">
             <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
             <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem fornecerá o Livro?">
        </div>

        <!-- Dados do Livro -->
        <div class="mb-3">
             <label for="Livro" class="form-label text-light">Livro:</label>
             <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Qual livro será Emprestado?">
        </div>

        <div class="d-flex gap-5 mt-5">
             <button type="submit" class="btn-success w-50">Adicionar</button>
             <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>